#include <iostream>
#include "PrioQueue.cpp"
using namespace std;

int main() {
	PrioQueue<Ticket> queue = new PrioQueue<Ticket>();

	while (menue())
		;
	return 0;
}

bool menue() {
	cout
			<< "1. new ticket \n2. clear \n3. next \n4. EXIT \n"
			<< endl;
	int input;
	cin >> input;
	switch(input){
	case 1:

	case 2:
		queue = new PrioQueue<Ticket>();
	case 3:

	case 4:

	default:
		cout << "Invalid input. Exiting"
		return 0;
	}
	return 0;
}
