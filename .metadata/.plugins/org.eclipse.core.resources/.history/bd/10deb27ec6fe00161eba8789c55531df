#include "punkt.h"

punkt::punkt() {
	m_x = 0;
	m_y = 0;
	m_blocked = true;
}

punkt::punkt(int x, int y) {
	m_x = x;
	m_y = y;
	m_blocked = true;
}

punkt::punkt(int x, int y, bool newState) {
	m_x = 0;
	m_y = 0;
	m_blocked = newState;
}

bool punkt::toogleState() {
	m_blocked = !(m_blocked);
	return m_blocked;
}
bool punkt::getState() {
	return m_blocked;
}
int punkt::getX() {
	return m_x;
}
int punkt::getY() {
	return m_y;
}
