#include <string>
using namespace std;

#ifndef TICKET_H_
#define TICKET_H_



enum Status{
	 open,
	 closed,
	 duplicate
};

class Ticket{
private:

	string text;
	string owner;
	Status status;
	int id;
public:
	Ticket();
	Ticket(string ownerName, string description);
	string getText()  const;
	string getOwner() const;
	string getId() const;
	Status getStatus() const;
	string getShort() const;
	string getStatusAsString() const;
	void print() const;
};



#endif /* TICKET_H_ */
